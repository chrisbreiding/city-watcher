progress-bar-height = 24px;

@-webkit-keyframes progress-bar-stripes {
  from { background-position: progress-bar-height 0; }
  to { background-position: 0 0; }
}

@keyframes progress-bar-stripes {
  from { background-position: progress-bar-height 0; }
  to { background-position: 0 0; }
}

.builds {
  padding: 5px 0;
  article {
    clearfix();
    margin: 0 10px;

    figure-size = 32px;

    figure,
    i {
      box-sizing: border-box;
      float: left;
      margin-top: 5px;
      width: figure-size;
      height: figure-size;
    }

    figure {
      background-color: #e3e3e3;
      background-image: linear-gradient(145deg, rgba(255,255,255,0.2), transparent);
      border: solid 3px;
      border-radius: 50%;
    }

    i {
      color: #c7c7c7;
      display: none;
      font-size: 1.6em;
      line-height: figure-size;
      text-align: center;
    }

    &.success figure {
      background-color: success-color;
      border-color: darken(success-color, 40%);
    }

    &.failure figure,
    &.error figure {
      background-color: error-color;
      border-color: darken(error-color, 40%);
    }

    &.queued {
      figure {
        display: none;
      }

      i {
        display: block;
      }
    }

    section {
      font-size: 1.2em;
      margin-left: figure-size + 10;
    }

    p {
      margin: 2px 0;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }

    .progress-bar {
      background-color: #222;
      border-radius: 3px;
      overflow: hidden;
      height: (progress-bar-height / 2);
    }

    .progress-value {
      -webkit-animation: progress-bar-stripes 2s linear infinite;
      animation: progress-bar-stripes 2s linear infinite;
      background-color: #878787;
      background-image: linear-gradient(-45deg,
                                        rgba(255,255,255,0.15) 25%,
                                        transparent 25%,
                                        transparent 50%,
                                        rgba(255,255,255,0.15) 50%,
                                        rgba(255,255,255,0.15) 75%,
                                        transparent 75%,
                                        transparent);
      background-repeat: repeat-x;
      background-size: progress-bar-height progress-bar-height;
      float: left;
      width: 0;
      height: 100%;
      transition: width 0.6s ease;
    }
  }
}

.builds-error,
.no-builds {
  color: #d3d3d3;
  margin: 15px;

  h3 {
    color: #FFF;
    font-size: 1.1em;
  }

  li {
    line-height: 1.5;
    list-style: disc;
    margin-left: 25px;
  }
}

configure-size = 42px;

.configure-surface {
  position: absolute;
  top: 0;
  right: 0;
  width: configure-size;
  height: configure-size;

  .editing & {
    display: none;
  }
}

a.configure-builds {
  &:before {
    border-top: solid 25px rgba(255,255,255,0.3);
    border-right: solid 25px rgba(255,255,255,0.3);
    border-bottom: solid 25px transparent;
    border-left: solid 25px transparent;
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    width: 0;
    height: 0;
  }

  color: rgba(255,255,255,0.5);
  display: none;
  font-size: 20px;
  position: absolute;
  top: 0;
  right: 0;
  text-align: center;
  width: configure-size - 14;
  height: configure-size - 14;
  line-height: configure-size - 14;

  &:hover,
  &:focus {
    color: rgba(255,255,255,0.8);
  }
}

.configure-surface:hover a.configure-builds {
  display: block;
}
