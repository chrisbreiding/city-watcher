<h3>Host</h3>
{{input value=host}}

<h3>
  Builds
  <a href="#" class="toggle-collapse-selected" {{action 'toggleCollapseSelectedBuilds'}}>
    <i {{bind-attr class="collapseSelectedBuilds:fa-caret-down:fa-caret-up :fa"}}></i>
  </a>
</h3>

{{#if hasSelectedBuilds}}
  <ul {{bind-attr class="collapseSelectedBuilds:collapsed :selected-builds"}}>
    {{#sortable-list tagName="ul" class="selected-builds" itemTag="li" items=selectedBuilds onUpdate="didSortSelectedBuilds"}}
      <li {{bind-attr data-id=id}}>
        <span class="project-name">{{projectName}}</span>
        <span>{{name}}</span>
        <a href="#" {{action 'removeSelectedBuild' this}}>
          <i class="fa fa-times"></i>
        </a>
      </li>
    {{/sortable-list}}
  </ul>
{{else}}
  <p class="no-selected-builds">
    Select builds below <i class="fa fa-arrow-down"></i>
  </p>
{{/if}}

<fieldset class="build-filter">
  <i class="fa fa-search"></i>
  {{input value=buildFilter}}
</fieldset>

<div class="available-projects">
  {{#each projectsAndBuilds}}
    <article>
      <h4>{{name}}</h4>
      <ul class="available-builds">
        {{#each builds}}
          <li {{action 'addSelectedBuild' this}}>
            <i class="fa fa-plus"></i>
            {{name}}
          </li>
        {{/each}}
      </ul>
    </article class="project">
  {{else}}
    <p>No builds found</p>
  {{/each}}
</div>

<button class="save" {{action 'save'}}>Save</button>

{{#if hasErrors}}
  <section class="errors">
    <ul>
      {{#each errors}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
    <button class="clear-errors" {{action 'clearErrors'}}>
      OK
    </button>
  </section>
{{/if}}
