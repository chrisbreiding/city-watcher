build(background-color) {
  background: background-color;
  border-radius: 3px;
  margin: 2px 0;
  padding: 3px 5px;

  i {
    float: right;
    margin: 5px;
    opacity: 0.6;
  }
}

.configure {
  padding: 10px 20px;
  overflow: auto;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;

  .save {
    padding: 3px 6px;
    position: absolute;
    top: 10px;
    right: 10px;
  }

  .errors {
    clearfix();
    background: #e3e3e3;
    border-radius: 3px;
    color: error-color;
    padding: 10px;
    position: absolute;
    top: 5px;
    left: 5px;
    right: 5px;
    text-align: left;

    ul {
      margin: 0 0 10px;
    }

    .clear-errors {
      float: right;
    }
  }
}

h3 {
  color: #d3d3d3;

  a.toggle-collapse-selected {
    color: #a3a3a3;
    margin-left: 5px;

    &:hover,
    &:focus {
      color: #c7c7c7;
    }
  }

  &:first-of-type {
    margin-top: 0;
  }
}

.build-filter {
  position: relative;

  i {
    color: #c7c7c7;
    position: absolute;
    left: 7px;
    top: 7px;
  }

  input {
    box-sizing: border-box;
    padding-left: 30px;
    width: 100%;
  }
}

.selected-builds {
  clearfix();
  margin: 0 0 10px;

  li {
    build(primary-color);
    color: #FFF;
    cursor: move;
    padding-right: 24px;
    position: relative;

    &.ui-sortable-placeholder {
      background: primary-color;
      border-radius: 3px;
      opacity: 0.5;
      visibility: visible !important;
    }

    .project-name {
      background: rgba(255,255,255,0.2);
      border-radius: 3px 0 0 3px;
      display: block;
      float: left;
      margin-right: 5px;
      padding: 3px 8px;
      position: relative;
      top: -3px;
      left: -5px;
    }

    a {
      color: #FFF;
      opacity: 0.6;
      position: absolute;
      top: 0;
      right: 0;
      text-align: center;
      width: 24px;
      height: 24px;

      &:hover {
        opacity: 1.0;
      }
    }
  }

  &.collapsed li {
    float: left;
    margin: 0 0 2px 2px;
    padding: 0;
    width: 20px;
    height: 20px;

    * {
      display: none;
    }
  }
}

.no-selected-builds {
  color: #929292;

  i {
    color: #929292;
    margin-right: 5px;
  }
}

.available-projects {
  font-size: .9em;

  article {
    clearfix();
  }

  h4 {
    float: left;
    text-align: right;
    width: 24%;
  }

  ul {
    margin-left: 28%;
  }
}

.available-builds {
  li {
    build(#575757);
    cursor: pointer;

    &:hover {
      background: lighten(#575757, 10%);
    }
  }
}
